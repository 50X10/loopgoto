-- LocalScript (StarterPlayerScripts)
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local LOCAL_PLAYER = Players.LocalPlayer
local TARGET_NAME = "Thatonebeaver2"
local FLOAT_SPEED = 5 -- studs per second
local DIST_BELOW = 3 -- how far below their feet you sit

local function getHRP(character)
	return character and character:FindFirstChild("HumanoidRootPart")
end

local function startPlatform(targetPlayer)
	local localChar = LOCAL_PLAYER.Character
	local targetChar = targetPlayer.Character
	if not localChar or not targetChar then return end

	local localHRP = getHRP(localChar)
	local targetHRP = getHRP(targetChar)
	if not localHRP or not targetHRP then return end

	RunService.RenderStepped:Connect(function(dt)
		if not targetHRP.Parent or not localHRP.Parent then return end
		-- Position yourself just below the target, and float up
		local offsetY = -DIST_BELOW
		local upward = FLOAT_SPEED * dt
		localHRP.CFrame = CFrame.new(
			targetHRP.Position.X,
			targetHRP.Position.Y + offsetY + upward,
			targetHRP.Position.Z
		)
	end)
end

-- Wait for target player
local target = Players:FindFirstChild(TARGET_NAME)
if target then
	startPlatform(target)
end

Players.PlayerAdded:Connect(function(p)
	if p.Name == TARGET_NAME then
		startPlatform(p)
	end
end)
